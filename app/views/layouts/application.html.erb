<!DOCTYPE html>
<html>
	<head>
	  <title>JetApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
    <nav class="navbar navbar-inverse ">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/ideas/showAll">JetApp</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          	<li class="<%= is_active?('/ideas/showAll') %>">
          		<%= link_to '/ideas/showAll' do%>
                <i class="fa fa-home fa-lg"></i> All Ideas
              <% end %>
          	</li>
            <!-- <li class="active"><a href="/ideas/showAll">All Ideas <span class="sr-only">(current)</span></a></li> -->
            <li class="<%= is_active?('/ideas/showAuthorIdea') %>">
            	<%= link_to '/ideas/showAuthorIdea' do%>
                <i class="fa fa-exclamation fa-lg"></i> My Ideas
              <% end %>
            </li>
            <li class="<%= is_active?('/ideas/new') %>">
              <%= link_to'/ideas/new' do %>
                <i class="fa fa-pencil-square-o fa-lg"></i> Create Idea
              <% end %>
            </li>
            <!-- <li><a href="/ideas/showAuthorIdea">My Ideas</a></li> -->
          </ul>
          <!-- <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form> -->

          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
            	<li><a href="#"><i class="fa fa-user fa-lg"></i> <%= current_user.email %></a></li>
    	        <li class="dropdown">
    	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Logged In <span class="caret"></span></a>
    	          <ul class="dropdown-menu" role="menu">
    	            <li>
    	            	<%= link_to edit_user_registration_path, :class => 'navbar-link' do%>
                    <i class="fa fa-cogs fa-lg"></i> Edit Profile
                    <% end %>
    	            </li>
    	            <li class="divider"></li>
    	            <li>
    	            	<%= link_to destroy_user_session_path, method: :delete, :class => 'navbar-link' do %>
                    <i class="fa fa-sign-out fa-lg"></i> Sign Out
                    <% end %>
    	            </li>
    	          </ul>
    	        </li>
    	        <%= image_tag current_user.gravatar_url, :class => 'profilePic pull-right' %>
    	      </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
            	<li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Log In <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                  	<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
                  </li>
                  <li class="divider"></li>
                  <li>
                  	<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
                  </li>
                </ul>
              </li>
            </ul>
          <% end %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class = "wrapper">
    	<!-- FLASHES FOR USER ACCOUNTS: DEVISE -->
    	<% if notice %>
    	  <p class="alert alert-success"><%= notice %></p>
    	<% end %>
    	<% if alert %>
    	  <p class="alert alert-danger"><%= alert %></p>
    	<% end %>

  	<!-- All views will get placed into here.-->
  		<%= yield %>
  	</div>
  
  <footer class="footer">
     <p>JetApp &copy; 2015</p>
  </footer>
	</body>
</html>
