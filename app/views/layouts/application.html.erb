<!DOCTYPE html>
<html>
	<head>
	  <title>JetApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
    <div class = "wrapper">
      <!-- Dropdown Structure -->
      <ul id="dropDownMainMenu" class="dropdown-content">
        <% if user_signed_in? %>
          <li>
            <%= link_to edit_user_registration_path, :class => '' do%>
              Edit Profile
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, :class => '' do %>
              Sign Out
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
          </li>
        <% end %>
      </ul>
      <nav>
        <div class="nav-wrapper blue darken-4">
          <a class="brand-logo" href="/ideas/showAll"> JetApp </a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li class="<%= is_active?('/ideas/showAll') %>">
              <%= link_to '/ideas/showAll' do%>
                <!-- <i class="fa fa-home"></i> --> All Ideas
              <% end %>
            </li>
            <li class="<%= is_active?('/ideas/showAuthorIdea') %>">
              <%= link_to '/ideas/showAuthorIdea' do%>
                <!-- <i class="fa fa-exclamation"></i> --> My Ideas
              <% end %>
            </li> 
            <li class="<%= is_active?('/ideas/new') %>">
              <%= link_to'/ideas/new' do %>
                <!-- <i class="fa fa-pencil-square-o"></i> --> Create Idea
              <% end %>
            </li>
            <!-- Dropdown Trigger -->
            <li>
            <a class="dropdown-button" href="#!" data-activates="dropDownMainMenu">Account<i class="fa fa-angle-down right"></i></a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container wrapper">
      	<!-- FLASHES FOR USER ACCOUNTS: DEVISE -->
      	<% if notice %>
      	  <p class="alert alert-success"><%= notice %></p>
      	<% end %>
      	<% if alert %>
      	  <p class="alert alert-danger"><%= alert %></p>
      	<% end %>

    	  <!-- All views will get placed into here.-->
    		<%= yield %>
      </div>

    </div>
  
  <footer class="footer">
     <p>JetApp &copy; 2015</p>
  </footer>
	</body>
</html>
