<!DOCTYPE html>
<html>
	<head>
	  <title>JetApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
    <div class = "wrapper">
      <!-- Dropdown Structure -->
      <ul id="dropDownMainMenu" class="dropdown-content">
        <% if user_signed_in? %>
          <li>
            <%= link_to edit_user_registration_path, :class => '' do%>
              Edit Profile
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, :class => '' do %>
              Sign Out
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
          </li>
        <% end %>
      </ul>
      <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper bluer
         darken-4">
          <%= link_to image_tag("JetPack_Logo_White.png", :size => '187.5x75', :alt => "JetPack Logo"), index_path, class: "brand-logo navFix"%>

          <a href="#" data-activates="mobile" class="button-collapse navFix"><i class="fa fa-angle-right"></i></a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li class="<%= is_active?('/ideas/showAll') %>">
              <%= link_to showAll_path() do%>
                <!-- <i class="fa fa-home"></i> --> All Ideas
              <% end %>
            </li> 
  
            <% if user_signed_in? %>
              <li class="<%= is_active?('showProfile_path()')%>"%>
                <%= link_to showProfile_path(current_user.profileName) do %>
                  <%= current_user.profileName %>
                <%end%>
              </li>
            <%end%>

            <!-- Dropdown Trigger -->
            <li>
            <a class="dropdown-button" href="#!" data-activates="dropDownMainMenu">Account<i class="fa fa-angle-down right"></i></a>
            </li>
          </ul>
        </div>      
        <!-- MOBILE NAVBAR -->
        <ul class="side-nav" id="mobile">
          <li class="<%= is_active?('/ideas/showAll') %>">
            <%= link_to showAll_path do%>
              All Ideas
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li class="<%= is_active?('showProfile_path()')%>"%>
              <%= link_to showProfile_path(current_user.profileName) do %>
                <%= current_user.profileName %>
              <%end%>
            </li>
          <%end%>
          <li class="divider"></li>
          <% if user_signed_in? %>
            <li>
              <%= link_to edit_user_registration_path, :class => '' do%>
                Edit Profile
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, :class => '' do %>
                Sign Out
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
            </li>
            <li>
              <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
            </li>
          <% end %>
        </ul>
      </nav>
      </div>
      <div class="container bodyContainer wrapper">

        <% if false %>
          <div class="center">
          	<!-- FLASHES FOR USER ACCOUNTS: DEVISE -->
            <% flash.each do |key, value| %>
              <%= content_tag :div, value, class: "flash #{key}" %>
            <% end %>
          </div>
        <%end%>

    	  <!-- All views will get placed into here.-->
    		<%= yield %>
      </div>

    </div>
	</body>
</html>
