<!-- This file is the view action for the ideas controller: other actions (add, delete, etc) will get routed to here -->
<title>Shared Ideas App</title>

<!-- This is rails way of doing a for each loop. This goes throguh each item in idea_item and displays its 'name' column -->
<!-- THIS IS FOR ALL USERS (NOT LOGGED IN USER) -->
<!-- ALL_IDEA IS DEFINED IN ideas_controller -->
<h3>All Ideas:</h3>
<div class="row">
	<% @all_ideas.each do |ideaItem| %>
	  <div class="col-sm-6 col-md-4 col-lg-3">
	    <div class="thumbnail">
	      <%= image_tag(ideaItem.picture_url, :class => "idea-thumbail-img",) if ideaItem.picture.present? %>
	      <div class="caption">
	        <h3><%= link_to ideaItem.name, showIdea_path(ideaItem.id) %> : <%= ideaItem.id %></h3>
	        <h5><%= ideaItem.author %></h5>
	        <p><%=ideaItem.description%></p>
	        <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
	      </div>
	    </div>
	    <!-- DELETE X: STYLE IS CRAP -->
			<% if current_user.email == ideaItem.author %>
				<%= link_to 'x', delete_path(:user_id => ideaItem.id), data: { confirm: 'Are you sure?' }, :class=>"close deleteButton" %>
			<% end %>
	  </div>
	<% end %>
</div>


<!-- FROM THE kaminari GEM -->
<div class="row">
 	<div class="col-md-12 text-center">
		<div class="pagination_links">
	    <%= paginate @all_ideas, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered", :container => false %>
	  </div>
	  <!-- <div class="page_info" style="text-align: center">
	    <%= page_entries_info @all_ideas %>
	  </div> -->
 	</div>
</div>
