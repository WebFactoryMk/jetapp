<div class="row">
	<div class="col s12 m12 l12">
		<div class="row">
			<div class="col s12">
			<h2 class="showHide">
				<%= @idea.name %> 
			<% if current_user.email == @idea.author %>
				<i class="fa fa-pencil-square-o fa-sm showOnHover"></i>
			<%end%>
			</h2>
			<h6 class="childElement"><%= @idea.author %></h6>
		</div>
		<!-- IF THE IDEA HAS A VALUE PROP: PLACE IT HERE -->
		<% if @idea.valueProposition != nil%>
		<div class="row">
			<div class="col s12">
				<h3 class="childElement">
					<blockquote>
						<%=@idea.valueProposition%>
					</blockquote>
				</h3>
			</div>
		</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col s12 m4 l4 right align">
			<!-- PUT AUTHOR PROFILE PIC HERE -->
			<% if @idea.picture.present? %>
				<%= image_tag(@idea.picture_url, :class=>"ideaImage right align")%>
				<% else %>
				<div class="noPicUpload">
					<i class="fa fa-picture-o fa-5x bigIcon"></i>
					<h3>You have no Idea Photo! </h3>
				</div>
			<% end %>
		</div>
	  <div class="col s12 m6 l7">
	    <ul class="tabs">
	      <li class="tab col s4"><a class="" href="#description">Description</a></li> 
	      <li class="tab col s4"><a href="#customersegment">CustomerSegment</a></li>
	      <li class="tab col s4"><a href="#vision">Vision</a></li>
	    </ul>
	  </div>
	  <div id="description" class="col s12 m6 l7">
			<div class="descriptionWrapper">
	  		<h5><%= @idea.description %></h5>
	  	</div>
	  </div>
	  <div id="customersegment" class="col s12 m6 l7">
	  	<h5><%=@idea.customerSegment%></h5>
	  </div>
	  <div id="vision" class="col s12 m6 l7">
	  	<h5><%=@idea.vision%></h5>
	  </div>
	</div>
</div>

<% if @comments.count > 0 %>
<div class="row">
	<div class="col m12">
	<hr>
		<h3><strong> <i class="fa fa-comment"></i> Comments</strong></h3>
		<div class="childElement">
			<% @comments.each do |comment| %>
				<!-- TODO: move this into a dedicated view -->
				<div class="showHide">
					<h4>
						<!-- TODO: get the actual username/email via users table -->
						<strong>UID <%= comment.user_id %> says:</strong>
						<%= comment.body %> 
						<% if current_user.id == comment.user_id %>

						<!-- THIS IS WRONG: CURRENTLY GRABBING IDEA ID NOT COMMENT ID -->
							<%= link_to edit_comment_path(:comment_id => params[:comment_id]), :class =>"commentForm showOnHover" do%>
								<i class="fa fa-pencil-square-o"></i>
							<%end%>
							<%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"commentForm showOnHover" do%>
								<i class="fa fa-times"></i>
							<% end %>
						<% end %>
					</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>
