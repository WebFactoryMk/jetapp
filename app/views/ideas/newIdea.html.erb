<% if flash[:success] %>
	<div class="alert alert-success">
		<button class="btn" type="button" class="close" data-dismiss="alert">x</button>
		<strong> <%= flash[:success]%> </strong>
	</div>
<% end %>
<% if flash[:error] %>
	<div class="alert alert-danger">
		<button class="btn" type="button" class="close" data-dismiss="alert">x</button>
		<strong> <%= flash[:error]%> </strong>
	</div>
<% end %>

<%= simple_form_for(@idea,:url=>{:action => "add"} , html: { class: 'form-horizontal' }) do |f| %>
	<%= render(:partial => "form", :locals => {:f => f}) %>  
<% end %>

